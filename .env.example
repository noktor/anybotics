# ── General ──────────────────────────────────
NODE_ENV=development
LOG_LEVEL=info

# ── MQTT (EMQX) ─────────────────────────────
MQTT_BROKER_URL=mqtt://localhost:1883

# ── Kafka (Redpanda) ────────────────────────
KAFKA_BROKERS=localhost:19092

# ── TimescaleDB ──────────────────────────────
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5432
TIMESCALE_USER=anybotics
TIMESCALE_PASSWORD=anybotics
TIMESCALE_DATABASE=anybotics
DATABASE_URL=postgresql://anybotics:anybotics@localhost:5432/anybotics

# ── Redis ────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379

# ── MinIO ────────────────────────────────────
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=inspection-data

# ── Auth ─────────────────────────────────────
JWT_SECRET=anybotics-dev-secret-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ── Retention ────────────────────────────────
RETENTION_DAYS=90
